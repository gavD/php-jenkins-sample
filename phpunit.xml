<?xml version="1.0" encoding="UTF-8"?>

<phpunit>

    <testsuites>
        <testsuite name="Test suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="build/coverage" title="WorldVision PHP SDK" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
